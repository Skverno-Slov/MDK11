<Page x:Class="LabWork11.View.Pages.MoviePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LabWork11.View.Pages" xmlns:viewmodel="clr-namespace:LabWork11.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:MoviePageViewModel}"
      xmlns:helpers="clr-namespace:LabWork11.Helpers"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Фильмы">
    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="20"/>
        </Style>
    </Page.Resources>
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal">
            <Button x:Name="AddButton" Content="Добавить" Command="{Binding AddCommand}"/>
            <Button x:Name="RemoveButton" Content="Удалить" Command="{Binding RemoveCommand}" CommandParameter="{Binding SelectedMovies}"/>
        </StackPanel>
        <DataGrid ItemsSource="{Binding Movies}"
                  HorizontalScrollBarVisibility="Auto"
                  SelectionMode="Extended"
                  VerticalScrollBarVisibility="Auto"
                  IsReadOnly="True"
                  helpers:DataGridSelectedItemsBehavior.SelectedItems="{Binding SelectedMovies}">
        </DataGrid>
    </DockPanel>
</Page>
